{
    "name": "p5-space-scroller-auto",
    "version": "1.0.0",
    "description": "auto-playing asteroids-like space-shooter (typescript, p5.js)",
    "scripts": {
        "cloc": "npx cloc . --exclude_dir=node_modules,libs,build --not-match-f='package-lock.json'",
        "format": "prettier --write .",
        "start-compile": "tsc --watch",
        "start-run": "browser-sync start --server -w",
        "start": "run-p start-compile start-run",
        "test": "echo \"Error: no test specified\" && exit 1",
        "typecheck": "tsc --noEmit"
    },
    "homepage": "https://github.com/Gaweph/p5-typescript-starter#readme",
    "devDependencies": {
        "@types/lodash": "^4.17.16",
        "@types/p5": "^1.7.6",
        "browser-sync": "^3.0.4",
        "lodash": "^4.17.21",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
    }
}
